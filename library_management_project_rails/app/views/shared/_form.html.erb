<%= form_for @user, url: user_form_url, method: form_method do |f| %>
  <%= csrf_meta_tags %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
  </div>
  <div class="mb-3">
    <%= f.label :age, class: "form-label" %>
    <%= f.number_field :age, class: "form-control", placeholder: "Enter age" %>
  </div>
  <div class="mb-3">
    <%= f.label :location, class: "form-label" %>
    <%= f.select :location, options_for_select(["Mumbai", "Pune", "Jalgaon", "Jhansi"]), {}, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>
  <div class="text-center">
    <%= f.submit submit_text, class: "btn btn-success" %>
  </div>
<% end %>
