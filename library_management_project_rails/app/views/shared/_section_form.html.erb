<%= form_for section, url: form_path, method: form_method do |f| %>
  <%= csrf_meta_tags %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
  </div>
  <div class="text-center">
    <%= f.submit section.persisted? ? "Update" : "Submit", class: "btn btn-success" %>
  </div>
<% end %>
