<%= form_for rak, url: (rak.new_record? ? rak_index_path : rak_path(rak)), method: (rak.new_record? ? :post : :patch) do |f| %>
  <%= csrf_meta_tags %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
  </div>
  <div class="mb-3">
    <%= f.label :section_id, "Select a Section", class: "form-label" %>
    <%= f.collection_select :section_id, Section.all, :id, :name, { prompt: "Select a Section" }, class: "form-control" %>
  </div>
  <div class="text-center">
    <%= f.submit rak.new_record? ? "Create" : "Update", class: "btn btn-success" %>
  </div>
<% end %>
